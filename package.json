{
	"name": "@savvy-web/workflow-release-action",
	"version": "0.0.0",
	"private": true,
	"description": "A private repository for GitHub-related tools and utilities.",
	"repository": {
		"type": "git",
		"url": "https://github.com/savvy-web/workflow-release-action.git"
	},
	"type": "module",
	"scripts": {
		"build": "github-action-builder build",
		"ci:publish": "changeset publish",
		"ci:test": "vitest --run --reporter=verbose",
		"ci:version": "changeset version && biome format --write .",
		"lint": "biome check --max-diagnostics=none",
		"lint:fix": "biome check --write --max-diagnostics=none",
		"lint:fix:unsafe": "biome check --write --unsafe --max-diagnostics=none",
		"lint:md": "markdownlint-cli2 '**/*.{md,mdx}' --config './lib/configs/.markdownlint-cli2.jsonc'",
		"lint:md:fix": "markdownlint-cli2  --config './lib/configs/.markdownlint-cli2.jsonc' --fix",
		"lint:md:fix:file": "markdownlint-cli2 '**/*.{md,mdx}' --config './lib/configs/.markdownlint-cli2.jsonc' --fix",
		"lint:md:ws": "markdownlint-cli2  --config './lib/configs/.markdownlint-cli2.jsonc' --fix",
		"prepare": "husky",
		"test": "vitest --run --reporter=verbose",
		"typecheck": "turbo run typecheck:all --log-prefix=none",
		"typecheck:all": "tsgo --noEmit",
		"validate": "github-action-builder validate"
	},
	"dependencies": {
		"@actions/attest": "^2.2.1",
		"@actions/cache": "^6.0.0",
		"@actions/core": "^3.0.0",
		"@actions/exec": "^3.0.0",
		"@actions/github": "^9.0.0",
		"@actions/glob": "^0.6.1",
		"@actions/http-client": "^4.0.0",
		"@actions/io": "^3.0.2",
		"@actions/tool-cache": "^4.0.0",
		"@octokit/auth-app": "^8.1.2",
		"@octokit/request": "^10.0.7",
		"@octokit/rest": "^22.0.1",
		"jsonc-parser": "^3.3.1",
		"semver": "^7.7.3",
		"ts-markdown": "^1.3.0",
		"workspace-tools": "0.40.4"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@commitlint/cli": "^20.4.0",
		"@commitlint/config-conventional": "^20.4.0",
		"@savvy-web/github-action-builder": "^0.1.0",
		"@savvy-web/lint-staged": "^0.1.2",
		"@types/node": "^25.1.0",
		"@typescript/native-preview": "7.0.0-dev.20260131.1",
		"@vitest/coverage-v8": "^4.0.18",
		"husky": "^9.1.7",
		"markdownlint-cli2": "^0.20.0",
		"markdownlint-cli2-formatter-codequality": "^0.0.7",
		"turbo": "^2.8.1",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.20.0",
	"devEngines": {
		"packageManager": {
			"name": "pnpm",
			"version": "10.20.0",
			"onFail": "ignore"
		},
		"runtime": [
			{
				"name": "node",
				"version": "24.11.0",
				"onFail": "ignore"
			}
		]
	}
}
